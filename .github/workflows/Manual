name: Manual Trigger Workflow

on:
  workflow_dispatch:
    inputs:
      type:
        description: 'Select the type to print'
        required: true
        type: choice
        options:
          - development
          - staging
          - production
          - testing

jobs:
  print-type:
    runs-on: ubuntu-latest
    steps:
      - name: Print selected type
        run: |
          echo "Selected type: ${{ github.event.inputs.type }}"
          echo "================================"
          
          case "${{ github.event.inputs.type }}" in
            development)
              echo "ðŸ”§ Development Environment Selected"
              echo "This is for development purposes"
              ;;
            staging)
              echo "ðŸ“¦ Staging Environment Selected"
              echo "This is for staging testing"
              ;;
            production)
              echo "ðŸš€ Production Environment Selected"
              echo "This is for production deployment"
              ;;
            testing)
              echo "ðŸ§ª Testing Environment Selected"
              echo "This is for running tests"
              ;;
          esac
          
          echo "================================"
          echo "Workflow completed successfully!"
